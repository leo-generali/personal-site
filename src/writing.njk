---
layout: base.njk
title: Writing
---

{% include 'partials/tags.njk' %}
<ul class="writing">
  {% for group in collections.postsByYear %}
    <span class="writing__block-header">{{ group[0] }}</span>
    {% for post in group[1] %}
      <li class="writing__item">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <span class="writing__item-year">{{ post.date | formatDate }}</span>
        <div class="writing__tag-collection">
          {% for tag in post.data.tags %}
            <span class="category-tag">{{ tag }}</span>
          {% endfor %}
        </div>
      </li>
    {% endfor %}
  {% endfor %}
</ul>