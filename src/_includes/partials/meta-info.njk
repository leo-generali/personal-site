{# Set overall site meta tags #}
{% set siteTitle = metadata.title %}
{% set siteDesc = metadata.desc %}
{% set currentUrl = metadata.url + page.url %}

{# Set individual page meta tags #}
{% if title %}
  {% set pageTitle = title + " | " + metadata.title %}
{% else %}
  {% set pageTitle = metadata.title %}
{% endif %}

{% if desc %}
  {% set pageDesc = desc %}
{% else %}
  {% set pageDesc = siteDesc %}
{% endif %}


<title>{{ pageTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}" />
<meta name="description" content="{{ pageDesc }}" />

{% if isNotIndexed %}
  <meta name="robots" content="noindex, follow">
{% endif %}

{# Twitter Meta Tags #}
<meta name="twitter:creator" content="@{{ metadata.twitter_handle | replace('@', '') }}" />
<meta name="twitter:description" content="{{ pageDesc }}" />
{% if socialImage %}  
  <meta name="twitter:image" content="{{ socialImage }}" />
  <meta name="twitter:image:alt" content="Page image for {{ site.name }}" />
{% endif %}

{# Open graph tags #}
<meta property="og:description" content="{{ pageDesc }}" />
<meta property="og:site_name" content="{{ siteTitle }}" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />
{% if socialImage %}  
  <meta property="og:image" content="{{ socialImage }}" />
  <meta property="og:image:alt" content="Page image for {{ metadata.name }}" />
{% endif %}